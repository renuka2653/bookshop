<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvCategoryWiseBook"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16sp"
        app:cardMaxElevation="16sp"
        android:layout_margin="12sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/ivCategoryWiseBookImage"
                android:src="@drawable/book_cover"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:id="@+id/tvCategoryWiseBookShopName"
                    android:text="RK Book Center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="24sp"
                    android:layout_margin="6sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:id="@+id/tvCategoryWiseBookShopRetaning"
                    android:text="4.5*"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="24sp"
                    android:layout_margin="6sp"
                    android:gravity="center"
                    android:background="@color/green1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCategoryWiseBookBookName"
                android:text="Book Name"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:layout_margin="6sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCategoryWiseBookBookCategory"
                    android:text="Book Cateory"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:layout_margin="6sp"
                    android:maxLength="25"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCategoryWiseBookBookPrice"
                    android:text="Book Price"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:layout_margin="6sp"
                    android:maxLength="25"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_margin="8sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCategoryWiseBookBookOffer"
                android:text="20% off"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:layout_margin="6sp"
                android:maxLength="25"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_margin="8sp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>