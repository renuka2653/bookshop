<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyOTPActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:src="@drawable/otp_verification"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Varification"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif-medium"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the OTP"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="15sp"
            android:layout_marginTop="8sp"
            android:fontFamily="sans-serif-medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvVerifyOTPMobileNo"
        android:text="+91 9130311308"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="15sp"
        android:layout_marginTop="8sp"
        android:fontFamily="sans-serif-medium"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20sp"
    android:gravity="center">

    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/etVerifyOTPInputOne"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="normal"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        />
    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/etVerifyOTPInputTwo"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="24sp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:layout_marginLeft="4dp"
        android:importantForAutofill="no"
        android:imeOptions="actionNext"/>
    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/etVerifyOTPInputThree"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="24sp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:layout_marginLeft="4dp"
        android:importantForAutofill="no"
        android:imeOptions="actionNext"/>
    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/etVerifyOTPInputFour"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="24sp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:layout_marginLeft="4dp"
        android:importantForAutofill="no"
        android:imeOptions="actionNext"/>
    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/etVerifyOTPInputFive"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="24sp"
        android:inputType="number"
        android:maxLength="1"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:importantForAutofill="no"
        android:imeOptions="actionNext"/>
    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/etVerifyOTPInputSix"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="24sp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:layout_marginLeft="4dp"
        android:importantForAutofill="no"
        android:imeOptions="actionDone"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:text="Didn't receive the OTP ? "
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:fontFamily="sans-serif-medium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resent OTP"
            android:id="@+id/tvVerifyOTPResentOTP"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/red"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="4dp"
            android:fontFamily="sans-serif-medium"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acbVerifyOTPVerify"
        android:text="Verify"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="25sp"
        android:background="@drawable/btn_shape_green"
        />

</LinearLayout>